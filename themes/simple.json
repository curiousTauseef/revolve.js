{
  "name": "simple",
  "layers": {
    "hour": {
      "type": "arm",
      "axis": "hours",
      "width": 4,
      "length": 200,
      "offset": 20,
      "shadowColor": "black",
      "shadow": 1
    },
    "major_ticks": {
      "type": "radial",
      "content": "ticks",
      "layout": "hour",
      "color": "darkblue",
      "width": 8,
      "length": 40,
      "include": [0,3,6,9,12]
    },
    "minor_ticks": {
      "type": "radial",
      "content": "ticks",
      "layout": "hour",
      "color": "black",
      "width": 4,
      "length": 10,
      "exclude": [0,3,6,9,12]
    },
    "inner2": { "type": "circle", "color": "#232323", "radius": 6 }
  }
}
